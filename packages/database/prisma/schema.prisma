generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  CAMPUS_PASTOR
  PASTOR
  TEAM
  HOD
  DISTRICT
  ZONE
  CELL
  MEMBER
}

enum Gender {
  MALE
  FEMALE
}

enum PostType {
  GENERAL
  ANNOUNCEMENT
  TESTIMONY
  REPORT
}

enum ReportType {
  WEEKLY
  MONTHLY
}

enum CourseStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}

// USER & AUTH 
model User {
  id         String  @id @default(uuid())
  email      String  @unique
  username   String? @unique
  password   String?
  firstName  String?
  lastName   String?
  phone      String?
  gender     Gender?
  role       Role    @default(MEMBER)
  image      String?
  about      String?
  dob      DateTime?
  provider   String?
  providerId String?

  districtId  String?
  communityId String?
  zoneId      String?
  cellId      String?

  // departmentIds String[] 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts Account[]
  sessions Session[]

  posts    Post[]
  comments Comment[]

  growthRecord GrowthRecord?

  leadsDistrict   District?   @relation("DistrictLeader")
  leadsCommunity  Community?  @relation("CommunityLeader")
  leadsZone       Zone?       @relation("ZonalLeader")
  leadsCell       Cell?       @relation("CellLeader")
  leadsChurchTeam ChurchTeam? @relation("TeamPastor")
  leadsDepartment Department? @relation("HOD")

  district    District?    @relation("DistrictUsers", fields: [districtId], references: [id])
  community   Community?   @relation(fields: [communityId], references: [id])
  zone        Zone?        @relation(fields: [zoneId], references: [id])
  cell        Cell?        @relation(fields: [cellId], references: [id])
  departments Department[] @relation("UserDepartments")

  reports Report[] @relation("UserReports")
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// CHURCH STRUCTURE 
model District {
  id   String @id @default(uuid())
  name String

  leaderId String? @unique
  leader   User?   @relation("DistrictLeader", fields: [leaderId], references: [id])

  communities Community[]
  users       User[]      @relation("DistrictUsers")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Community {
  id         String @id @default(uuid())
  name       String
  districtId String

  leaderId String? @unique
  leader   User?   @relation("CommunityLeader", fields: [leaderId], references: [id])

  district District @relation(fields: [districtId], references: [id])
  zones    Zone[]
  cells    Cell[]
  users    User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Zone {
  id          String @id @default(uuid())
  name        String
  communityId String

  leaderId String? @unique
  leader   User?   @relation("ZonalLeader", fields: [leaderId], references: [id])

  community Community @relation(fields: [communityId], references: [id])
  cells     Cell[]
  users     User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Cell {
  id          String @id @default(uuid())
  name        String
  zoneId      String
  communityId String

  leaderId String? @unique
  leader   User?   @relation("CellLeader", fields: [leaderId], references: [id])

  community Community @relation(fields: [communityId], references: [id])
  zone      Zone      @relation(fields: [zoneId], references: [id])
  users     User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// DEPARTMENTS & TEAMS
model ChurchTeam {
  id   String @id @default(uuid())
  name String

  leaderId String? @unique
  leader   User?   @relation("TeamPastor", fields: [leaderId], references: [id])

  // members   User[]   @relation("UserDepartments")
  departments Department[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Department {
  id           String @id @default(uuid())
  name         String
  churchTeamId String

  leaderId String? @unique
  leader   User?   @relation("HOD", fields: [leaderId], references: [id])

  churchTeam ChurchTeam @relation(fields: [churchTeamId], references: [id])
  teams      DepTeam[]
  members    User[]     @relation("UserDepartments")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DepTeam {
  id           String  @id @default(uuid())
  name         String
  departmentId String
  leaderId     String?

  department Department @relation(fields: [departmentId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// GROWTH TRACKING 
model GrowthRecord {
  id     String @id @default(uuid())
  userId String @unique

  baptism          Boolean      @default(false)
  foundationCourse CourseStatus @default(NOT_STARTED)
  maturityCourse   CourseStatus @default(NOT_STARTED)
  joinedDepartment Boolean      @default(false)
  joinedCell       Boolean      @default(false)

  user User @relation(fields: [userId], references: [id])

  updatedAt DateTime @updatedAt
}

// POSTS, COMMENTS, ANNOUNCEMENTS
model Post {
  id      String   @id @default(uuid())
  title   String
  content String
  type    PostType @default(GENERAL)

  authorId     String
  zoneId       String?
  districtId   String?
  cellId       String?
  departmentId String?

  createdAt DateTime @default(now())

  author   User      @relation(fields: [authorId], references: [id])
  comments Comment[]
}

model Comment {
  id       String @id @default(uuid())
  content  String
  postId   String
  authorId String

  createdAt DateTime @default(now())

  post   Post @relation(fields: [postId], references: [id])
  author User @relation(fields: [authorId], references: [id])
}

// REPORTS
model Report {
  id      String     @id @default(uuid())
  title   String
  type    ReportType
  content String

  authorId   String
  zoneId     String?
  districtId String?
  cellId     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  author User @relation("UserReports", fields: [authorId], references: [id])
}

// EVENTS 
model Event {
  id          String   @id @default(uuid())
  title       String
  description String
  date        DateTime

  zoneId       String?
  districtId   String?
  cellId       String?
  departmentId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
